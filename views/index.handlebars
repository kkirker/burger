<h1>Burgers Yo!</h1>

<h2>Burgers that are not devoured...yet</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
            <div class="burger-card">
                <div class="name">{{name}}</div>
                <div class="button"><button class="eat-burger" data-id="{{this.id}}">Devour It</button></div>
            </div>
            {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
            <div class="burger-card">
                {{name}}
                <button class="eat-burger" data-id="{{this.id}}">Devour It</button>
            </div>
            {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Not Devoured!<br>
    <input type="radio" name="devoured" value="0"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
